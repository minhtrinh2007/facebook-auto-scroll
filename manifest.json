{
  "manifest_version": 3,
  "name": "Advanced Auto Facebook",
  "version": "2.0",
  "description": "Tự động hóa các hành động trên Facebook",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
